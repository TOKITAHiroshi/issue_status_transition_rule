<fieldset class="box tabular">
<p><label for="issue_status_transition_rule_name"><%=l(:field_name)%> <span class="required">*</span></label>
<%= f.text_field 'name'  %></p>

<p><label for="tracker"><%=l(:label_tracker)%></label>
<%= f.select "tracker", @trackers.collect {|t| [t.name, t.id]}, :required => true %></p>

<p><label for="issue_status"><%=l(:label_issue_status)%></label>
<%= f.select "current_status", @issue_statuses.collect {|t| [t.name, t.id]}, :required => true %></p>

<p><label for="issue_status_new"><%=l(:label_issue_status_new)%></label>
<%= f.select "next_status", @issue_statuses.collect {|t| [t.name, t.id]}, :required => true %></p>

<p><label for="rule"><%=l(:label_rule)%> <span class="required">*</span></label>
<%= f.text_area 'condition', { :size=>'80x10' }  %></p>

<p><%= link_to(l(:label_rule_convention), {:action=>:help},
	       :onclick => "window.open(\"#{ issue_status_transition_rules_help_path(@issue_status_transition_rule) }\", \"\", \"resizable=yes, location=no, width=600, height=340, menubar=no, status=no, scrollbars=yes\"); return false;", :class =>'icon icon-help') %> </p>

</fieldset>
